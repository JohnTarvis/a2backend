{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://www.example.com/anon.json",
  "type": "object",
  "properties":{
    "handle":{
      "type": "string",
      "minLength": 1,
      "maxLength": 31
    },
    "ip":{
      "type": "string",
      "format": "string"
    },
    "birth_time":{
      "type": "string",
      "Format":"date-time"
    },
    "is_admin":{
      "type": "boolean"
    },
    "password":{
      "type":"string"
    }
  },
  "additionalProperties": false,
  "required": [
    "password",
    "handle",
    "ip",
    "is_admin"
  ]
}
